CC = gcc
DEBUG = -g
CFLAGS = -Wall -std=c99 -pedantic -c $(DEBUG)
LFLAGS = -Wall -std=c99 -pedantic $(DEBUG)

sim02 : main.o sim02_functions.o
	$(CC) $(LFLAGS) main.o -o sim02

sim02_functions.o : sim02_functions.c
	$(CC) $(CFLAGS) main.o -o sim02

main.o : main.c
	$(CC) $(CFLAGS) main.c

clean:
	\rm *.o sim02
